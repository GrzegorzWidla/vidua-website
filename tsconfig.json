{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "jsx": "react",
    "target": "es5",
    "lib": ["es2016", "dom"]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "typings/browser", "typings/browser.d.ts"]
}
